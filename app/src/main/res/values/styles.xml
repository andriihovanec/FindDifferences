<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="ButtonRobotoBoldWhiteLarge">
        <item name="android:textSize">@dimen/text_size_xxxx_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorDownloadLevelButton</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Alert dialog style. -->
    <style name="FindDifferenceAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@drawable/bg_dialog_completed</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_animation</item>
        <item name="android:windowExitAnimation">@anim/fade_out_animation</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.olbigames.finddifferencesgames.ui.home.GameListFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_game_list" >
        <action
            android:id="@+id/action_homeFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.olbigames.finddifferencesgames.ui.game.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_gameFragment_to_downloadNewLevelFragment"
            app:destination="@id/downloadNewLevelFragment" />
        <action
            android:id="@+id/action_gameFragment_to_gameCompleteDialog"
            app:destination="@id/gameCompleteDialog" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.olbigames.finddifferencesgames.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/downloadNewLevelFragment"
        android:name="com.olbigames.finddifferencesgames.ui.game.DownloadLevelFragment"
        android:label="DownloadNewLevelFragment"
        tools:layout="@layout/fragment_more_games"/>
    <dialog
        android:id="@+id/gameCompleteDialog"
        android:name="com.olbigames.finddifferencesgames.ui.game.GameCompleteDialog"
        android:label="GameCompleteDialog"
        tools:layout="@layout/dialog_game_complete"/>
</navigation>